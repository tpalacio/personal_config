# add starship
eval "$(starship init bash)"

# Set up fzf key bindings and fuzzy completion
# eval "$(fzf --bash)"
# disable ctrl-t
FZF_CTRL_T_COMMAND= eval "$(fzf --bash)"
# Print tree structure in the preview window
export FZF_ALT_C_OPTS="
  --walker-skip .git,node_modules,target,dbt_packages
  --preview 'tree -C {}'"

# Open in tmux popup if on tmux, otherwise use --height mode
# export FZF_DEFAULT_OPTS='--height 40% --tmux bottom,40% --layout reverse --border top'
export FZF_DEFAULT_OPTS='--height 40% --layout reverse --border top'
# add various applications to the fzf completion
_fzf_setup_completion path mate
_fzf_setup_completion path subl
_fzf_setup_completion path dbt

# # forgit settings
# moved to ~/.bashrc
# settings added here will be read by interactive bash shells, and also by login shells (see .bash_profile)

# --- forgit settings (must be exported BEFORE sourcing the plugin) ---
export FORGIT_CHECKOUT_BRANCH_BRANCH_GIT_OPTS='--sort=-committerdate'

# use $'...' so we don't carry literal quotes into the value
export FORGIT_STASH_FZF_OPTS=$'--bind=ctrl-d:reload(git stash drop $(cut -d: -f1 <<<{}) 1>/dev/null && git stash list)'

# either one-line or multi-line; avoid quoting the % as a string
export FORGIT_FZF_DEFAULT_OPTS=$'--exact --reverse --border --cycle --height=75%'

# FORGIT_INSTALL_DIR is optional for Homebrew installs; harmless to keep
export FORGIT_INSTALL_DIR="$HOME/.forgit"

# not working
# export FORGIT_BRANCH_DELETE_GIT_OPTS='--sort=-committerdate'

# load forgit (Homebrew bash plugin) and suppress its startup warnings only
if [ -r "$(brew --prefix)/opt/forgit/share/forgit/forgit.plugin.sh" ]; then
  # send only the plugin's *stderr* to /dev/null (keeps normal output and your env intact)
  source "$(brew --prefix)/opt/forgit/share/forgit/forgit.plugin.sh" 2>/dev/null
fi


# fix starship character encoding
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
